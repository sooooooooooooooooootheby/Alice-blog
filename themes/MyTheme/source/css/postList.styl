// 文章列表
.indexContentArticle {
    width: 100%;
    min-height: calc(100vh);
    display: flex;
    flex-direction: column
    justify-content: center;
    align-items: center;
}
.indexContentArticleBox {
    width: 50rem;
    margin-top: 200px;
}
.indexContentArticle a {
    width: 100%

    text-decoration: none;
    color var(--articleBox-text-color);
}
.posts {
    width: 100%;
    height: 200px;
    background-color: #fff;
    border-radius: 20px;
    box-shadow: 0px 0px 10px 0px #333;
    opacity: 0;
    margin: 15px 0px;
    display: flex;
}
.postLeft {
    width: 70%;
    margin: 20px;
    overflow: hidden;
}
.post-title {
    width: 100%;
    height: 30%;
    padding-left: 5px;
    border-left: 3px solid var(--articleBox-text-color);
    
    white-space: nowrap; /* 防止文本换行 */

    color: var(--articleBox-text-color);
    font-size: 40px;
    font-weight: bold
}
.post-content {
    width: 100%;
    height: 40%;
    margin-top: 5px;
    padding-left: 5px;
    border-left: 3px solid var(--articleBox-text-color);
    overflow: scroll;

    color: var(--articleBox-text-color);
    font-size: 15px;
}
.post-info {
    width: 100%;
    height: 30%;
    display: flex;
    align-items: center

    white-space: nowrap; /* 防止文本换行 */

    color: var(--articleBox-text-color);
}
.post-info span {
    margin-right: 10px;
}


.postRight {
    width: 30%;
    margin: 20px;
}
.postRight div {
    width: 100%
    height: 100%
    background-color: #444;
    border-radius: 20px
    overflow: hidden;
}
.postRight div img {
    width: 100%;
    height: 100%
    object-fit: cover;
}

// 分页
.paginator {
    width: 100%;
    height: 60px;
    margin-bottom: 30px;
    display: flex;
    justify-content: center;
    align-items: center;  
}
.page-nav span {
    padding: 8px 10px;
    margin: 0px 10px;
    border-radius: 8px
    background-color: #16A085;
    color: aliceblue;
}
.page-nav a {
    padding: 8px 10px;
    margin: 0px 10px;
    border-radius: 8px
    background-color: aliceblue;
    color: #16A085;
}