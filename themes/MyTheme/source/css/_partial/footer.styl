footer {
    width: 100vw;
    height: 160px;
    background-color: var(--header-bg-color);

    display: flex;
    justify-content: space-around;
    align-items: center;

    box-shadow: 0px 0px 10px 0px var(--box-shadow-color);
}
.footerLeft {
    display: flex;
    flex-direction: column;    
}
.footerLeft span {
    color: #666;
}
.moeICP {
    color: #f1acbe;
}

.footerRight {
    display: flex;
    flex-direction: column; 
    justify-content: center;
    align-items: flex-end;
}
.footerRight ul {
    margin-top: 10px;
    color: #666;
    display: flex;
}
.footerRight ul p {
    font-weight: bold;  
    line-height: 32px;  
}
.footerRight ul li {
    margin: 0px 5px;
    list-style: none;
    line-height: 32px;  
}
.footerRight ul li a {
    text-decoration: none;
    color: #666;
    font-weight: bold;
    transition: 0.5s;
}
.footerRight ul li a:hover {
    color: #16A085;
}
.footerRight ul li a img {
    width: 32px;    
    height: 32px;
    background-color: #555;
    border-radius: 32px;
}