footer {
    width: 100vw;
    height: 160px;
    background-color: var(--header-bg-color);

    display: flex;
    flex-direction: column
    justify-content: center;
    align-items: center;

    box-shadow: 0px 0px 10px 0px var(--box-shadow-color);
}
footer span {
    color: #666;
}
footer ul {
    margin-top: 10px;
    color: #666;
    display: flex;
}
footer ul li {
    margin: 0px 5px;
    list-style: none;
}
footer ul li a {
    text-decoration: none;
    color: #666;
    font-weight: bold;
    transition: 0.5s;
}
footer ul li a:hover {
    color: #16A085;
}
.moeICP {
    color: #f1acbe;
}