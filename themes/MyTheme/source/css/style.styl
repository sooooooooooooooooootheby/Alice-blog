@import "theme"
*
  margin 0
  padding 0
body 
  display flex
  flex-direction column

  background-color var(--themeBGColor)

  font-family PingFang

// 滚动条
::-webkit-scrollbar 
  display none

// 选中文本
::selection 
  background-color var(--selectionBGColor)
  color var(--selectionText)
/* Firefox */
-moz-::selection 
  background-color var(--selectionBGColor)
  color var(--selectionText)
/* WebKit browsers */
-webkit-::selection 
  background-color var(--selectionBGColor)
  color var(--selectionText)

// 图标
/* 在线链接服务仅供平台体验和调试使用，平台不承诺服务的稳定性，企业客户需下载字体包自行发布使用并做好备份。 */
@font-face 
  font-family 'iconfont'  /* Project id 4335391 */
  src url('//at.alicdn.com/t/c/font_4335391_whzhtqpl3wa.woff2?t=1702716621744') format('woff2'),
      url('//at.alicdn.com/t/c/font_4335391_whzhtqpl3wa.woff?t=1702716621744') format('woff'),
      url('//at.alicdn.com/t/c/font_4335391_whzhtqpl3wa.ttf?t=1702716621744') format('truetype')
.icon 
  width 1em
  height 1em
.iconfont
  font-family "iconfont" !important
  font-size 16px
  font-style normal
  -webkit-font-smoothing antialiased
  -webkit-text-stroke-width 0.2px
  -moz-osx-font-smoothing grayscale

//字体
@font-face 
  font-family PingFang
  src url('/ttf/PingFang.woff2')
@font-face 
  font-family Intel
  src url('/ttf/IntelOneMono-Medium.ttf')

