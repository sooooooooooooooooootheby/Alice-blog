.indexContent {
    width: 100vw;
}
.indexGuider {
    width: 100vw;
    height: 64px;    
}
// 主页头部
.indexContentHeader {
    max-width: 1152px;
    min-height: calc(100vh - 64px);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

// 头部上面的文字和头像
.indexContentHeaderUp {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-top: 100px;
}
// 文字
.indexContentHeaderLeft {
    display: flex;
    flex-direction: column;
    justify-content: center;  

    font-weight: bold;
}
.indexContentHeaderLeftH {
    margin: 0px 0px;    
    text-shadow: 10px 10px 10px;
}
.indexContentHeaderLeftH:hover::before {
    content: "";
}
.indexContentHeaderLeftH1 {
    color: var(--index-text-h1-color);
    font-size: 56px;
    margin: -10px 0px;
}
.indexContentHeaderLeftH3 {
    color: var(--index-text-h3-color);
    font-size: 56px;
}
.indexContentHeaderLeftH5 {
    color: var(--index-text-h5-color);
    font-size: 28px;
}
.indexContentHeaderLeft h5 img {
    position: absolute;
    margin: 10px 0px 0px 10px 
    width: 30px;
    height: 30px
}

// 头像
.indexContentHeaderRight{
    width: 200px;
    height: 200px;
    margin-right: 200px;
    position relative;
}
.indexContentHeaderRight img{
    width: 200px;
    height: 200px;
    border-radius: 320px;
    position: absolute;
    top: 0px;
    right: 0px;
    z-index: 1;
}
.indexContentHeaderRightBG {
    width: 200px;
    height: 200px;
    background-color: #16a085;
    box-shadow: 0px 0px 120px 60px rgba(22, 160, 133 , 25%);
    border-radius: 310px;
    position: absolute;
    top: 0px;
    right: 0px;
    z-index -1;
}


// 头部下面的技术
.indexContentHeaderDown {
    order: 1;
    margin-top: 50px;
}
.indexContentHeaderDown>p {
    padding: 10px 0px;
    color: var(--index-text-h3-color);
    font-size: 20px;
    font-weight: bold;
    border-bottom: 2px solid var(--index-text-h3-color);
}
.indexContentHeaderDown ul {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
}
.indexContentHeaderDown ul li {
    list-style: none;
    padding: 20px;
    margin: 8px;
    opacity: 1;   

    background-color: rgba(216, 216, 216, 0.3);
    border-radius: 10px;
    backdrop-filter: blur(10px);
}
.indexContentHeaderDown ul li>p {
    color: #666;
    font-size: 15px; 
    margin: 10px 0px;   
}
.indexContentHeaderDown ul li div {
    display: flex;    
}
.indexContentHeaderDown ul li div svg {
    font-size: 24px; 
    padding: 10px;
    background-color: rgba(216, 216, 216, 0.6);    
    border-radius: 10px;
}
.indexContentHeaderDown ul li div p {
    color: #444;
    line-height: 45px;
    margin-left: 10px;
    font-size: 20px;
    font-weight: bold;
}