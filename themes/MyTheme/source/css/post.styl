// 顶开导航栏
.post-Detali-Guider
    width 100vw
    height 64px

.post-Detali-content
    width 100vw
    display flex
    flex-direction column
    justify-content center
    align-items center

// 上面封面
.post-Detali-content-title
    width 100vw
    height 300px
    position relative
    z-index 1
    overflow hidden
    box-shadow 0px 5px 10px 1px var(--articleShadow)

.post-Detali-content-title-img::after // 图片笼罩
    content ''
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background rgba(0, 0, 0, 0.5)
    pointer-events none

.post-Detali-content-title-img
    img
        width 102%
        height 100%
        position absolute
        z-index -1
        object-fit cover

.post-Detali-content-title-content
    width 100%
    height 100%
    position absolute
    z-index 1
    display flex
    flex-direction column
    justify-content center
    align-items center
    color var(--articleCoverText)

    h1
        font-size 40px

    span
        display none

// 下面文章
.post-Detali-content-content
    max-width 50%
    box-shadow 0px 0px 10px 1px var(--articleShadow)
    color var(--articleText)

.post-Detali-content-content-content
    padding 50px 0px
    display flex
    justify-content space-around

// 目录
.post-Detali-content-content-content-Toc
    max-width 20%
    height auto
    position fixed
    top 400px
    left 50px
    transition all 1s

    .tocCatalogue
        font-weight bold
        font-size 20px
        color var(--articleP)

.toc, .toc li, .toc li::marker
    list-style none

.toc-number
    display none

.toc-item
    font-weight bold

    ol
        margin-left 1em

.toc-text
    font-size 15px
    color var(--articleTocA)
    text-decoration none

.toc-text:hover
    color var(--articleTocAHover)

// 文章
.post-Detali-content-content-content-article
    max-width 90%
    transition all 1s

// 评论区
.vpanel
    background-image url('https://pic.imgdb.cn/item/65ace75a871b83018a258098.png') // pic.imgdb.cn/item/65ace75a871b83018a258098.png')// pic.imgdb.cn/item/65ace75a871b83018a258098.png')// pic.imgdb.cn/item/65ace75a871b83018a258098.png') // pic.imgdb.cn/item/65ace75a871b83018a258098.png);
    background-size contain
    background-repeat no-repeat
    background-position right
    background-color var(--articleCommentBGColor)
    resize vertical
    border-radius 20px

.vwrap
    border 0px !important

.vempty
    color var(--articleCommentText)

.vcard
    padding 20px
    border-radius 20px
    background-color var(--articleCommentBGColor)

.vemojis
    flex-wrap wrap

    i
        margin 5px

.v[data-class=v] .vemoji, .v[data-class=v] .emoji
    width 40px !important
    height 40px !important
    margin 2px

.v[data-class=v] img
    max-width none !important

.vcard
    margin 20px 0px

// 文章样式
blockquote
    margin 3px
    padding 10px
    border-radius 20px
    background-color var(--articleBGColor)

    p
        color var(--articleText)
        padding-left 10px
        border-left 2px solid var(--articleText)

.post-Detali-content-content
    img
        padding 0% !important

    h1
        font-size 1.6em

    h2
        font-size 1.4em

    h3
        font-size 1.2em

    h4
        font-size 1em

    h5
        font-size 0.8em

    h6
        font-size 0.6em

    h1, h2, h3, h4, h5, h6
        margin 10px 0px
        transition 0.5s
        color var(--articleH)

    h1::before, h2::before, h3::before, h4::before, h5::before, h6::before
        content '# '

    h2:hover::after
        content ' H2'

    h3:hover::after
        content ' H3'

    h4:hover::after
        content ' H4'

    h5:hover::after
        content ' H5'

    h6:hover::after
        content ' H6'

    p
        line-height 26px
        font-size 16px
        color var(--articleText)

    a
        color var(--articleA)

    img
        width 100%

    table
        margin 0 auto
        padding 10px
        border 2px solid var(--articleText)
        border-radius 10px

    thead
        margin-bottom 5px

    tbody
        margin 5px 0px