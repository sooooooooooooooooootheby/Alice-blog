// 顶开导航栏
.post-Detali-Guider {
    width: 100vw;
    height: 64px;
}
.post-Detali-content {
    width: 100vw;
    display: flex;
    flex-direction: column
    justify-content: center;
    align-items: center;
}
// 上面封面
.post-Detali-content-title {
    width: 100vw;
    height: 300px;
    overflow: hidden;
    position: relative;
    z-index: 10;
    box-shadow: 0px 0px 10px 0px var(--box-shadow-color);
}
.post-Detali-content-title-img::after {
    content: ''; /* 伪元素必须有 content 属性 */
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5); /* 半透明黑色覆盖层 */
    pointer-events: none; /* 防止遮挡图片的交互 */
}
.post-Detali-content-title-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
    position: absolute;
}
.post-Detali-content-title-content {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column
    justify-content: center;
    align-items: center;

    z-index: 1;
    position: absolute;

    color: var(--post-title-text-color);
}
.post-Detali-content-title-content h1 {
    font-size: 40px;
}
.post-Detali-content-title-content span {
    display: none;
}


// 下面文章
.post-Detali-content-content {
    max-width: 55%;
    padding: 20px 60px 0px 60px;
    box-shadow: 0px 0px 10px 1px #333;

    background-color: var(--post-content-bg-color);
    color: var(--post-content-text-color);
}

// 评论区
.vpanel {
    background-image: url(https://pic.imgdb.cn/item/656dc68ac458853aef083a11.jpg);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: right;
    background-color: rgb(249, 248, 244);
    resize: vertical;
    border-radius: 20px;
}
.vwrap {
    border: 0px !important;
}
.vempty {
    color: var(--post-content-text-color);   
}
.vcard {
    padding: 20px;
    border-radius: 20px
    background-color: rgb(249, 248, 244);
}
.vemojis {
    flex-wrap: wrap;    
}
.vemojis i {
    margin: 5px;    
}
.v[data-class=v] .vemoji, .v[data-class=v] .emoji {
    width: 40px !important;
    height: 40px !important;
    margin: 2px;
}
.v[data-class=v] img {
    max-width: none !important;    
}
.post-Detali-content-content img {
    padding: 0% !important;
}
.vcard {
    margin: 20px 0px;    
}

// 文章样式
blockquote {
    margin: 10px;
    padding: 20px 20px 1px 20px;
    border-radius: 20px;
    background-color: aliceblue;
}
blockquote p {
    color: #333;
    padding-left: 10px;
    border-left: 2px solid #333;
}
.post-Detali-content-content h1 {
    font-size: 3.5em;
    margin: 10px 0px;
}
.post-Detali-content-content h2 {
    font-size: 3em;
    margin: 10px 0px;
}
.post-Detali-content-content h3 {
    font-size: 2.5em;
    margin: 10px 0px;
}
.post-Detali-content-content h4 {
    font-size: 2em;
    margin: 10px 0px;
}
.post-Detali-content-content h5 {
    font-size: 1.5em;
    margin: 10px 0px;
}
.post-Detali-content-content h6 {
    font-size: 1em;
    margin: 10px 0px;
}
.post-Detali-content-content h1:hover::after, h2:hover::after, h3:hover::after, h4:hover::after, h5:hover::after, h6:hover::after {
    content: " #";
    color: var(--index-text-h1-color);
}
.post-Detali-content-content p {
    line-height: 26px;  
    font-size: 16px; 
}
.post-Detali-content-content a {
    color: var(--post-content-text-color);    
}
.post-Detali-content-content img {
    width: 100%;
}
.post-Detali-content-content table {
    border: 2px solid #555;
    border-radius: 10px;
    padding: 10px;    
    margin: 0 auto;
}
.post-Detali-content-content thead {
    margin-bottom: 5px;  
}
.post-Detali-content-content tbody {
    margin: 5px 0px;    
}