<header id="header">
    <div class="headerBox">
        <div class="title">
            <img src="<%= url_for('img/logo.webp') %>" alt="logo">
            <a href="<%= url_for() %>">
                <%= config.title %>
            </a>
        </div>
        <!-- 菜单 -->
        <div class="menu hidemenu" id="menu">
            <div class="list">
                <ul>
                    <% for (name in theme.menu) { %>
                        <li>
                            <a href="<%- url_for(theme.menu[name]) %>">
                                <%= name %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
            <div class="isolation"></div>
            <div class="control hideControl" id="control">
                <div class="appearance">
                    <span>💡 Appearance</span>
                    <input type="checkbox" id="themeCheckbox" class="theme-checkbox">
                </div>
                <div class="soundSwitch">
                    <span>🔈 Sound</span>
                    <%- partial('_partial/soundSwitch') %>
                </div>
                <div class="isolation"></div>
                <div class="link">
                    <ul>
                        <% for (item of theme.link) { %>
                            <li>
                                <a href="<%= item.url %>">
                                    <svg class="icon" aria-hidden="true">
                                        <use xlink:href="#icon-<%= item.icon %>"></use>
                                    </svg>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
        <!-- 移动端的菜单开关 -->
        <%- partial('menuSwitch') %>
    </div>
    <!-- 导航栏 -->
    <%- js('js/header') %>
    <!-- 明暗主题 -->
    <%- js('js/theme') %>
</header>
<headerBar id="headerBar"></headerBar>