// 平板端
@media screen and (max-width 1366px)
    .headerBox
        .menu
            .isolation
                display: none

            .control
                position absolute
                top: 64px
                right: 32px
                transition 0.5s
                flex-direction: column
                padding: 16px 12px
                background-color: var(--header-menu-background-color)
                border-radius: 12px
                box-shadow: 0 12px 32px rgba(0, 0, 0, .1), 0 2px 6px rgba(0, 0, 0, .08)
                .appearance
                    min-width: 200px
                    padding: 6px 0
                    justify-content: space-between
                    span
                        display: flex
                        color: var(--header-appearance-svg-color)
                        font-size: 12px
                .isolation
                    display: flex
                    width 100%
                    height: 1px
                    margin: 10px 0
            
            .showControl
                opacity 1
                pointer-events auto
            .hideControl
                opacity 0
                pointer-events none
        
        .padMenuSwitchLab
                display: block
                margin-right: 64px
                input
                    display: none