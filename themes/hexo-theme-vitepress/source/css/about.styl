.about {
    width: 820px;
    height: calc(100vh - 105px);
    padding: 20px 10px;
    margin: 0 auto;

    .title {
        font-size: 26px;
        font-weight: bold;
        color: var(--title-color);
    }

    .content {
        margin-left: 38px;
        font-size: 18px;
        color: var(--content-color);
    }

    ul {
        margin-top: 60px;

        li {
            height: 128px;
            display: flex;
            justify-content: space-between;
            list-style: none;
            border: 1px solid var(--border);
            border-radius: 4px;

            .left {
                display: flex;
                flex-direction: column;
                padding: 10px;

                span {
                    font-size: 16px;
                    color: var(--title-color);
                }

                p {
                    padding: 4px 0;
                    font-size: 14px;
                    color: var(--content-color);
                    flex-grow: 1;
                }

                a {
                    display: flex;
                    align-items: center;

                    svg, p {
                        color: var(--title-color);
                        margin-right: 4px;
                    }
                }
            }

            .right {
                width: 200px;
                height: 100%;
                position: relative;
                overflow: hidden;

                img {
                    width: 100%;
                    height: auto;
                    position: absolute;
                    top: -30%;
                    right: 0;
                }
            }
        }
    }
}